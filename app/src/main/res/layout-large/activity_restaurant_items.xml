    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/restitemfragframe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.luisramirez.sugafoodi.RestaurantItemsDetailActivity">

    <fragment
        android:id="@+id/restitemfragment"
        android:name="com.luisramirez.sugafoodi.RestaurantItemsFragment"
        android:layout_width="match_parent"
