    <fragment
        android:id="@+id/restitemdetailfragment"
        android:name="com.luisramirez.sugafoodi.ItemDetailFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2" />



</FrameLayout>